

module sign_extend_tb();

parameter INPUT_LENGTH = 16;
parameter OUTPUT_LENGTH = 32;

//input
reg [INPUT_LENGTH-1:0] in;
//output
wire [OUTPUT_LENGTH-1:0] out;

sign_extend uut(
    .in(in),
    .out(out)
);
initial begin
    in = 16'b1010101010101010;
    #500;
    in = 16'b0101010101010101;
    #500;
end
endmodule
    
